<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/view_margin"
        app:cardCornerRadius="@dimen/card_view_corners">

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/commissions_item_background">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size_commissions_item"
            android:padding="@dimen/tv_padding_commissions_item"
            android:textAlignment="center"
            android:text="2018-05-05 19:24:26"
            />

        <TextView
            android:id="@+id/tv_converted_from"
            android:layout_below="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size_commissions_item"
            android:padding="@dimen/tv_padding_commissions_item"
            android:textAlignment="center"
            android:text="Konvertuota: 500 EUR"
            />
        <TextView
            android:id="@+id/tv_converted_to"
            android:layout_below="@+id/tv_converted_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size_commissions_item"
            android:padding="@dimen/tv_padding_commissions_item"
            android:textAlignment="center"
            android:text="Gauta: 5000 JYP"
            />

        <TextView
            android:id="@+id/tv_commissions_price"
            android:layout_below="@+id/tv_converted_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size_commissions_item"
            android:padding="@dimen/tv_padding_commissions_item"
            android:textAlignment="center"
            android:text="Komisiniu kaina: 120 EUR"
            />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>